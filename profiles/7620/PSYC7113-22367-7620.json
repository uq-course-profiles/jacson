    "learning_outcomes": [
        {
            "number": "LO1.",
            "description": "Apply and critically evaluate diagnostic classification systems and their role in diagnosing psychological disorders in adults."
        },
        {
            "number": "LO2.",
            "description": "Demonstrate competency in clinical assessment techniques."
        },
        {
            "number": "LO3.",
            "description": "Apply biopsychosocial approaches to diagnostic case formulation and evidence-based interventions."
        },
        {
            "number": "LO4.",
            "description": "Understand the psychosocial and pharmacological management for common psychological disorders."
        },
        {
            "number": "LO5.",
            "description": "Understand how to apply ethical principles, cultural considerations when working with diverse populations, and reflective/reflexive practice to formulation and communication of clinical findings in multidisciplinary team settings (relevant to accurate documentation, case report writing, and verbal presentation of case summaries)."
        },
        {
            "number": "LO6.",
            "description": "Understand the impact of inequitable access to healthcare from a human rights perspective and its implications for working with Aboriginal and Torres Strait Islander peoples."
        },
        {
            "number": "LO7.",
            "description": "Critically engage with the research evidence base to inform clinical decision-making and competence in all (including digital) environments to foster ongoing professional development in psychological practice."
        }
    ],
